<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="PJ.Gestures.Maui.Samples.FlowGesturePage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:gesture="clr-namespace:PJ.Gestures.Maui;assembly=PJ.Gestures.Maui"
	Title="FlowGesturePage">

	<ContentPage.Behaviors>
		<gesture:GestureBehavior ReceiveGestureFromChild="False"
                                 Tap="GestureBehavior_Tap_1" DoubleTap="GestureBehavior_OnDoubleTap_1"/>
	</ContentPage.Behaviors>
	<Grid
		Background="Fuchsia"
		HorizontalOptions="Center"
		VerticalOptions="Center">
		<Label
			Background="Black"
			FontSize="40"
			HorizontalOptions="Center"
			Text="Click here"
			TextColor="White"
			VerticalOptions="Center" />

		<Grid.Behaviors>
			<gesture:GestureBehavior FlowGesture="True" Tap="GestureBehavior_Tap"  DoubleTap="GestureBehavior_OnDoubleTap"/>
		</Grid.Behaviors>
	</Grid>
</ContentPage>