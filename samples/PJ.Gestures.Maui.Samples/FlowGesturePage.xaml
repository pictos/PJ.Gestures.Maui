<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="PJ.Gestures.Maui.Samples.FlowGesturePage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:gesture="clr-namespace:PJ.Gestures.Maui;assembly=PJ.Gestures.Maui"
	Title="FlowGesturePage">

	<ContentPage.Behaviors>
		<gesture:GestureBehavior ReceiveGestureFromParent="true" Swipe="GestureBehavior_Swipe" />
	</ContentPage.Behaviors>

	<CollectionView x:Name="cv">
		<CollectionView.ItemTemplate>
			<DataTemplate>
				<VerticalStackLayout>
					<Label FontSize="16" Text="This is a title!" />
					<Label Text="{Binding .}" />
				</VerticalStackLayout>
			</DataTemplate>
		</CollectionView.ItemTemplate>
	</CollectionView>
</ContentPage>